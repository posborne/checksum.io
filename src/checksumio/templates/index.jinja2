{% extends "base.jinja2" %}
{% block js %}
$(document).ready(function() {
  $("#btn_revchecksum").click(function() {
    var formdata = $("#revform").serialize();
    $.ajax({
      type: "POST",
      url: "/revcheck",
      data: formdata,
      success: function(response) {
        $("#result").show().html(response);
      }
    });
  });
});
{% endblock %}
{% block body %}
<div class="page-header">
  <h1>checksum.io <small>Got a checksum problem?</small></h1>
</div>
<div>
  <form id="revform" role="form">
    <div class="form-group">
      <textarea placeholder="Payload" class="form-control" rows="3" name="payload"></textarea>
    </div>
    <div class="form-group">
      <input type="text" placeholder="Known Checksum" class="form-control" name="checksum" />
    </div>
    <div class="form-group">
      <button type="button" class="btn btn-primary" id="btn_revchecksum">Calculate!</button>
    </div>
  </form>
  <div id="result" class="well"></div>
</div>
{% endblock %}
